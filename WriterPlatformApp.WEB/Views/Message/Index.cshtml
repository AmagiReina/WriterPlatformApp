@model IEnumerable<WriterPlatformApp.WEB.ViewModels.MessageViewModel>


<h2>Comments</h2>

<div class="list-group">
    @foreach (var item in Model)
    {
        <div class="card border-dark mb-3" style="max-width: 20rem;">
            <div class="card-header">
                <h5 class="mb-1">@item.UserProfiles.UserName</h5>
            </div>
            <div div class="card-body">
                <p class="mb-1">@item.MessageText</p>
                <small>@item.MessageDate</small>
            </div>
        </div>
    }

</div>

<div class="form-horizontal">
    <div class="form-group">
        <label for="message-text"></label>
        <div class="col-md-10">
            <textarea id="message-text" name="message-text" ></textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn btn-default" id="add-comment"
                   onclick="return AddMessage()"/>
        </div>
    </div>
</div>
