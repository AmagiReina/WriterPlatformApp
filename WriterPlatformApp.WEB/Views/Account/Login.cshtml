@model WriterPlatformApp.WEB.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<h2>Вход на сайт</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p>
            <label>@Html.DisplayNameFor(x => x.UserName)</label><br />
            @Html.EditorFor(x => x.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.UserName)
        </p>
        <p>
            <label>@Html.DisplayNameFor(x => x.Password)</label><br />
            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Password)
        </p>
        <p>
            <button type="submit" class="btn btn-outline-primary">Войти</button>
        </p>
    </div>
}

