@model WriterPlatformApp.WEB.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Авторизация";
}


    <div class="row w-50 mx-auto">
        <div class="col text-center">
            @if (ViewBag.LoginResult == "DANGER_LOGIN")
            {
                <div class="alert alert-dismissible alert-danger">
                    <strong class="text-center">Неверный логин или пароль</strong>
                </div>
            }
            @if (ViewBag.LoginResult == "DANGER_DELETED")
            {
                 <div class="alert alert-dismissible alert-danger">
                     <strong class="text-center">Аккаунт удален</strong>
                 </div>
            }

            <h2 class="text-primary">Вход на сайт</h2>

            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl },
                FormMethod.Post, new { @class = "d-flex justify-content-center" }))
            {
                @Html.AntiForgeryToken()

        <div class="form-group w-50">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-sx-4">
                <p class="text-center">
                    <label class="btn text-primary font-italic disabled">@Html.DisplayNameFor(x => x.UserName)</label><br />
                    @Html.EditorFor(x => x.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                </p>
            </div>
            <div class="col-sx-4">
                <p class="text-center">
                    <label class="btn text-primary font-italic disabled">@Html.DisplayNameFor(x => x.Password)</label><br />
                    @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                </p>
            </div>
                <p class="text-center">
                    <button type="submit" class="btn btn-outline-success">Войти</button>
                </p>
            </div>
            }
        </div>
    </div>

