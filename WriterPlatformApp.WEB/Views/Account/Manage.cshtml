@model WriterPlatformApp.WEB.ViewModels.UserViewModel
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Manage";
}

<h2>Manage</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p>
            <label>@Html.DisplayNameFor(x => x.UserName)</label><br />
            @Html.EditorFor(x => x.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.UserName)
        </p>
        <p>
            <label>@Html.DisplayNameFor(x => x.Email)</label><br />
            @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(x => x.Email)
        </p>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit Info" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div id="change-password">
    @*Html.Action("ChangePassword", "Account")*@
</div>



<div>
    <button type="button" class="btn btn-outline-primary"
            onclick="location.href =
        '@Url.Action("Delete", "Account")'">
        Delete Account
    </button>
</div>
