@model WriterPlatformApp.WEB.ViewModels.TitleViewModel

@{
    ViewBag.Title = Model.TitleName.Trim();
}

<div>
    <p>
        @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-outline-warning" })
    </p>
</div>

<div class="jumbotron jumbotron-fluid border border-info rounded-sm bg-white">
    @Html.HiddenFor(model => model.Id)
    <div class="container d-flex">
        <h1 class="display-4 text-center d-flex align-items-center">
            @Html.DisplayNameFor(model => model.TitleName) : @Html.DisplayFor(model => model.TitleName)
        </h1>

        <div class="container d-flex flex-column">
            <div class="container d-flex mb-3 justify-content-center">
                <p class="font-italic text-primary text-center mr-2">
                    @Html.DisplayNameFor(model => model.PublicationDate) :
                </p>

                <p class="font-weight-bold text-success text-center">
                    @Html.DisplayFor(model => model.PublicationDate)
                </p>
            </div>

            <div class="container d-flex mb-3 justify-content-center">
                <p class="font-italic text-primary text-center mr-2">
                    @Html.DisplayNameFor(model => model.Rating) :
                </p>

                <p class="font-weight-bold text-success text-center">
                    @Html.DisplayFor(model => model.Rating)
                </p>
            </div>

            <div class="container d-flex mb-3 justify-content-center">
                <p class="font-italic text-primary text-center mr-2">
                    @Html.DisplayNameFor(model => model.Genres.GenreName) :
                </p>

                <p class="font-weight-bold text-success text-center">
                    @Html.DisplayFor(model => model.Genres.GenreName)
                </p>
            </div>

            <div class="container d-flex mb-3 justify-content-center">
                <p class="font-italic text-primary text-center mr-2">
                    @Html.DisplayNameFor(model => model.UserProfiles.UserName) :
                </p>

                <p class="font-weight-bold text-success text-center">
                    @Html.DisplayFor(model => model.UserProfiles.UserName)
                </p>
            </div>

            <p class="text-center">
                @Html.ActionLink("Прочесть", "ReadFile", new { id = Model.Id }, new { @class = "btn btn-outline-success" })
            </p>
            @Scripts.Render("~/bundles/ajaxratingscript")
            <div id="ratingSection" class="d-flex justify-content-center">

            </div>
        </div>
    </div>
</div>


@Scripts.Render("~/bundles/ajaxmessagescript")
@Scripts.Render("~/bundles/moment")
<div id="commentSection" class="jumbotron jumbotron-fluid border border-info rounded-sm">

</div>
