@model IEnumerable<WriterPlatformApp.WEB.ViewModels.TitleViewModel>

@{
    ViewBag.Title = "Произведения";
}
@Styles.Render("~/Content/css")


<div>
    <h2 class="breadcrumb">Произведения</h2>
    <form class="form-inline my-2 my-lg-0 float-right">
        <input class="form-control mr-sm-2" type="text" placeholder="Search">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>

</div>


<p class="btn btn-outline-primary">
    @Html.ActionLink("Create New", "Create")
</p>


@foreach (var item in Model)
{
    <div class="d-flex justify-content-start bd-highlight mb-3" id="title-list">
        <div class="card border-primary mb-3" style="max-width: 20rem;">
            <div class="card-header">
                <h4 class="card-title">
                    Название:
                    @item.TitleName
                </h4>

            </div>
            <div class="card-body">
                <h4 class="card-title">
                    Рейтинг:
                    @item.Rating
                </h4>
                <p class="card-text">
                    Жанр:
                    @item.Genres.GenreName
                </p>
                <p class="card-text">
                    Автор:
                    @item.UserProfiles.UserName
                </p>

            </div>
            <div class="card-footer text-muted">
                <p class="card-text">
                    Дата публикации:
                    @item.PublicationDate

                </p>
                <p class="btn btn-info float-right">
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </p>
            </div>
        </div>
    </div>
}









